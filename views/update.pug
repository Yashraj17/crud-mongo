doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title Update
    body 
        .navbar.navbar-expand-lg.navbar-dark.bg-primary 
            .container 
                a.navbar-brand(href="") CRUD
        .container
            .row.mt-3
                .col-3 
                .col-6 
                    .card
                        .card-body 
                            form(action=`${"/update/"+user._id}`,method="POST")
                                .mb-3 
                                    label(for="") Name 
                                    input(type="text", name="name" value=`${user.name}`).form-control 
                                .mb-3 
                                    label(for="") Contact 
                                    input(type="number", name="contact" value=`${user.contact}`).form-control
                                .mb-3 
                                    label(for="") Email 
                                    input(type="email", name="email" value=`${user.email}`).form-control
                                .mb-3 
                                    input(type="submit" ,value="Update").btn.btn-warning.text-light.w-100