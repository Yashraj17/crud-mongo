doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title Insert
    body 
        .navbar.navbar-expand-lg.navbar-dark.bg-primary 
            .container 
                a.navbar-brand(href="/") CRUD
                form(action="/search", method="get") 
                    .input-group 
                        input(type="search", name="searchdata", placeholder="Enter Roll no..").form-control
                        input(type="submit", value="search").btn.btn-dark
        .container
            .row.mt-3
                .col-4 
                    .card
                        .card-body 
                            form(action="/insert", method="post")
                                .mb-3 
                                    label(for="") Name 
                                    input(type="text", name="name" placeholder="Enter name").form-control 
                                .mb-3 
                                    label(for="") Contact 
                                    input(type="text", name="contact" placeholder="Enter contact").form-control
                                .mb-3 
                                    label(for="") Email 
                                    input(type="email", name="email" placeholder="Enter email").form-control
                                .mb-3 
                                    input(type="submit" ,value="submit").btn.btn-warning.text-light.w-100
                .col-8.mx-auto
                    table.table 
                        tr
                            th Name
                            th Contact
                            th Email
                            th Delete
                            th Update
                        each value in users
                            tr 
                                td= value.name
                                td= value.contact
                                td= value.email
                                td 
                                    form(action="/deleteRecord", method="post")
                                        input(type="hidden",name="_id",value=`${value._id}`)
                                        input(type="submit", value="delete",name="send").btn.btn-danger.btn-sm
                                td  
                                    a(href=`${"/update/"+value._id}`).btn.btn-sm.btn-success Update 